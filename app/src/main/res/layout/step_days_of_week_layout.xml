            <include layout="@layout/days_of_week_day_layout" android:id="@+id/day_2"/>
            <include layout="@layout/days_of_week_day_layout" android:id="@+id/day_3"/>
            <include layout="@layout/days_of_week_day_layout" android:id="@+id/day_4"/>
            <include layout="@layout/days_of_week_day_layout" android:id="@+id/day_5"/>
            <include layout="@layout/days_of_week_day_layout" android:id="@+id/day_6"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
